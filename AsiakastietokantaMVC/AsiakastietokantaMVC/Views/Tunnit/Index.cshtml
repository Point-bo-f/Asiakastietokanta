@{
    ViewBag.Title = "Index";
}
@section scripts {

    <script type="text/javascript">
        $(function päivitäTuntilistaus() {
            $.getJSON("/tunnit/getlist", null, function (json) {

                var tunnit = JSON.parse(json);
                alert("tuntien lkm: " + tunnit.length);

                var html = "";
                for (var index = 0; index < tunnit.length; index++) {
                    html += "<tr>" +
                        "<td><a href='#'><span class='glyphicon glyphicon-pencil'></span></a></td>" +
                        "<td>" + tunnit[index].TuntiID + "</td>" +
                        "<td>" + tunnit[index].ProjektiID + "</td>" +
                        "<td>" + tunnit[index].HenkiloID + "</td>" +
                        "<td>" + tunnit[index].Pvm + "</td>" +
                        "<td>" + tunnit[index].Tunnit1 + "</td>" +
                        "<td><a href='#'><span class='glyphicon glyphicon-trash'></span></a></td>" +
                        "</tr>\r\n";
                }

                $("#tunnitList tbody").html(html);
                // tietojen muokkaus
                $(".glyphicon-pencil").click(function () {
                    // etsitään asiakkaan tiedot klikatulta riviltä
                    var tunnitId = $(this).parent().parent().next().text();
                    alert(tunnitId);

                    // haetaan asiakkaan tiedot id:n perusteella
                    $.getJSON("/tunnit/getsingletunti/" + tuntiId, null, function (json2) {
                        var tunti = JSON.parse(json2);

                        // kopioidaan tiedot ikkunaan
                        $("#tunnitModal_TuntId").val(tunti.TuntiID);
                        $("#tunnitModal_ProjId").val(tunti.ProjektiID);
                        $("#tunnitModal_HenkiloId").val(tunti.HenkiloID);
                        $("#tunnitModal_Pvm").val(tunti.Pvm);
                        $("#tunnitModal_Tunnit").val(tunti.Tunnit1);

                        // näytetään ikkuna
                        $("#tuntiModalTitle").text("Muokkaa tunteja");
                        $("#tuntiModalDialog").modal("show");
                    });
                });

                // tietojen poisto
                $(".glyphicon-trash").click(function () {
                    // etsitään asiakkaan tiedot klikatulta riviltä
                    console.log("Poistoa klikattu");
                    var tuntiId = $(this).parent().parent().prev().prev().prev().prev().text();
                    var ok = confirm("Haluatko varmasti poistaa tunteja " + tuntiId + "?");

                    if (ok == true) {
                        $.getJSON("/tunnit/delete/" + tuntiId, null, function (status) {
                            if (status == true) {
                                alert("Tunnit on nyt poistettu!");
                                päivitäTuntilistaus();
                            }
                            else {
                                alert("Poistaminen ei onnistunut, yritä uudelleen!");
                            }
                        });
                    }
                });
            });
        });

        // sivun alustaminen
        $(function () {
            päivitäTuntilistaus();

            $("#addNewHtunnitButton").click(function () {

                // tyhjennetään ikkunan tiedot
                $("#tunnitModal_TuntId").val("(uusi)");
                $("#tunnitModal_ProjId").val("");
                $("#tunnitModal_HenkiloId").val("");
                $("#tunnitModal_Pvm").val("");
                $("#tunnitModal_Tunnit").val("");
                $("#tunnitModalTitle").text("Lisää uudet tunnit");
                $("#tunnitModalDialog").modal("show");
            });

            $("#tunnitModalSaveButton").click(function () {
                // luetaan käyttäjän syöttämät kentät
                var details = {
                    TuntiID: $("#tunnitModal_tuntId").val(),
                    ProjektiID: $("#tunnitModal_ProjId").val(),
                    HenkiloID: $("#tunnitModal_HenkiloId").val(),
                    Pvm: $("#tunnit_Pvm").val(),
                    Tunnit1: $("#tunnitModal_Tunnit").val()
                };

                $.post("/tunnit/update/", details, function (status) {
                    if (status == true) {
                        alert("Uudet tiedot tallennettu!");
                        $("#tunnitModalDialog").modal("hide");
                        päivitäTuntilistaus();
                    }
                    else {
                        alert("Tallennus ei onnistunut, yritä uudelleen!");
                    }
                });
            });

            console.log("Alustus valmis!");
        });
    </script>
}
<h2>Tunnit</h2>
<table class="table table-striped" id="tunnitList">
    <thead>
        <tr>
            <th>TuntiID</th>
            <th>ProjektiID</th>
            <th>HenkiloID</th>
            <th>Pvm</th>
            <th>Tunnit1</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div class="modal fade" tabindex="-1" role="dialog" id="tunnitModalDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><span id="tunnitModalTitle">Muokkaa tunteja</span></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">Tunti-id</div>
                    <div class="col-md-6"><input class="form-control" id="tunnitModal_TuntId" type="text" readonly></div>
                </div>
                <div class="row">
                    <div class="col-md-3">Projekti-id</div>
                    <div class="col-md-6"><input class="form-control" id="tunnitModal_ProjId" type="text"></div>
                </div>
                <div class="row">
                    <div class="col-md-3">Henkilö-id</div>
                    <div class="col-md-6"><input class="form-control" id="tunnitModal_HenkiloId" type="text"></div>
                </div>
                <div class="row">
                    <div class="col-md-3">Pvm</div>
                    <div class="col-md-6"><input class="form-control" id="TunnitModal_Pvm" type="text"></div>
                </div>
                <div class="row">
                    <div class="col-md-3">Tunnit</div>
                    <div class="col-md-6"><input class="form-control" id="tunnitModal_Tunnit" type="text"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Sulje</button>
                <button type="button" class="btn btn-primary" id="henkiloModalSaveButton">Tallenna</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
